<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lanou.foodpies">

    <!--添加网络权限-->
    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".base.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">

        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>

        <!--食物百科 相关-->
        <activity android:name=".foodlibrarys.SearchActivity"/>
        <activity android:name=".foodlibrarys.CompareActivity"/>
        <activity android:name=".foodlibrarys.LibraryMoreActivity"/>

        <!--逛吃相关-->
        <activity android:name=".goingeats.evaluate.EvaluateMoreActivity"/>

        <!--我的中 设置 和 登录-->
        <activity android:name=".mine.SettingActivity"/>
        <activity android:name=".mine.LoginActivity"/>


    </application>

</manifest>